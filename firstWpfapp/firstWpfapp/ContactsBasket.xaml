                <TextBox BorderBrush="White" BorderThickness="2.5" x:Name="txtPosition" HorizontalContentAlignment="Center" HorizontalAlignment="Left" Height="30" Margin="10,310,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="197" FontFamily="Lato Light" FontSize="16" Background="Transparent" Foreground="White"/>
            </Grid>
            <ComboBox x:Name="usersList"  HorizontalAlignment="Left" Margin="98,117,0,0" VerticalAlignment="Top" Width="247" Height="24" SelectionChanged="usersList_SelectionChanged" ScrollViewer.VerticalScrollBarVisibility="Visible" MaxDropDownHeight="190" />
