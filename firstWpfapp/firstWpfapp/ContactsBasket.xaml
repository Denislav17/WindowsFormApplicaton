        </Grid>
        <Button x:Name="btnGoBack" HorizontalAlignment="Left" VerticalAlignment="Top" Width="77" Margin="20,402,0,0" Background="Transparent" BorderBrush="Transparent" Height="38" Click="btnBack_Click">
            <Image Source="C:\Users\my\Desktop\btnBack.png" />
        </Button>
    </Grid>
</Window>
