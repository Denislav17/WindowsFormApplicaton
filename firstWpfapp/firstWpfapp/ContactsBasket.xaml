    <Grid Margin="0,0,17,10">
        <Grid x:Name="grid"  HorizontalAlignment="Left" Height="440" Margin="10,10,0,0" VerticalAlignment="Top" Width="667">
            <Grid.Background>
                <RadialGradientBrush>
                    <GradientStop Color="#FF8F2D56" Offset="0.379"/>
