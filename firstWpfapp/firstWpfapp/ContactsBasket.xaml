            <Label FontFamily="Lato Light" FontSize="18" Foreground="White" Height="30" Width="144" HorizontalContentAlignment="Center" Content="Company Name" HorizontalAlignment="Left" Margin="83,418,0,0" VerticalAlignment="Top"/>
            <Label FontFamily="Lato Light" FontSize="18" Foreground="White" Height="30" Width="144" HorizontalContentAlignment="Center" Content="Position" HorizontalAlignment="Left" Margin="83,466,0,0" VerticalAlignment="Top"/>

        </Grid>
        <Button x:Name="btnGoBack" HorizontalAlignment="Left" VerticalAlignment="Top" Width="77" Margin="300,530,0,0" Background="Transparent" BorderBrush="Transparent" Height="38" Click="btnBack_Click">
