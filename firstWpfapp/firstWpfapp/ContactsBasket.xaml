                </RadialGradientBrush>
            </Grid.Background>
            <Grid HorizontalAlignment="Left" Height="371" Margin="425,32,0,0" VerticalAlignment="Top" Width="217">
                <Grid.Background>
                    <RadialGradientBrush>
                        <GradientStop Color="Transparent" Offset="0.379"/>
                        <GradientStop Color="Transparent" Offset="1.2"/>
                    </RadialGradientBrush>
                </Grid.Background>
                <Image HorizontalAlignment="Left" Height="112" Margin="54,27,0,0" VerticalAlignment="Top" Width="114" Source="C:\Users\my\Desktop\contacticon.png"/>
                <TextBox BorderBrush="White" BorderThickness="2.5" x:Name="txtFirstName" HorizontalContentAlignment="Center" HorizontalAlignment="Left" Height="30" Margin="10,165,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="197" FontFamily="Lato Light" FontSize="16" Background="Transparent" Foreground="White"/>
                <TextBox BorderBrush="White" BorderThickness="2.5" x:Name="txtLastName" HorizontalContentAlignment="Center"  HorizontalAlignment="Left" Height="31" Margin="10,213,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="197" FontFamily="Lato Light" FontSize="16" Background="Transparent" Foreground="White"/>
